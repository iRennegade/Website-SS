    "compilerOptions": {
        "outDir": ".build",
        "rootDir": "./src",
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/**/*"
    ]
}